= render :partial => 'readers/flasher'

#forum
  %h1
    = link_to "#{@forum.name} &raquo;", forum_url(@forum), {:class => 'breadhead'}
    %br
    = t('forums.edit_discussion') 

  #new_topic
    = form_for :topic, :url  => forum_topic_path(@forum, @topic), :html => {:method => :put, :class => 'friendly'} do |f|
      = render :partial => "form", :object => f
	    = submit_tag t('forums.save_changes')
	    = t('forums.or')
	    = link_to(t('cancel').downcase, forum_topic_path(@forum, @topic))

= render :partial => 'readers/controls'

- content_for :breadcrumbs do
  = link_to t('forums.forum'), topics_url
  \&gt;
  = link_to @forum.name, forum_url(@forum) 
  \&gt;
  = t('forums.edit_discussion')

- content_for :pagetitle do
  = t('forums.edit_discussion')
